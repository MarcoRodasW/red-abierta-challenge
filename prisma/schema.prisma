generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String
  role      Role     @default(USER)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  ADMIN
  USER
}

model Vehicle_Rates {
  id              Int               @id @default(autoincrement())
  vehicule_type   Vehicle_Type      @unique
  hourly_Rate     Float
  Parking_Records Parking_Records[]
}

enum Vehicle_Type {
  CAR
  MOTORCYCLE
  SPECIAL
}

model Parking_Records {
  id             Int            @id @default(autoincrement())
  license_plate  String         @db.VarChar(20)
  vehicle_type   Vehicle_Rates  @relation(fields: [vehicle_typeId], references: [id])
  vehicle_typeId Int
  entry_time     DateTime       @default(now())
  exit_time      DateTime?
  status         Parking_Status @default(PARKED)
  total_cost     Float
}

enum Parking_Status {
  PARKED
  EXITED
}
